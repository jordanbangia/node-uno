{
    "name": "node-uno",
    "version": "1.0.0",
    "description": "Uno on the web",
    "main": "src/server/index.ts",
    "scripts": {
        "build:server": "tsc --outDir dist/server",
        "build:client": "parcel build src/client/index.html --out-dir dist/client",
        "build": "npm run build:server && npm run build:client",
        "watch:client": "parcel watch src/client/index.html --out-dir dist/client",
        "watch:server": "nodemon",
        "watch": "concurrently --kill-others \"npm run watch:client\" \"npm run watch:server\"",
        "start": "npm run build && node .",
        "test": "jest --coverage"
    },
    "keywords": [],
    "author": "Jordan Bangia",
    "license": "MIT",
    "dependencies": {
        "express": "4.17.1",
        "parcel": "1.12.4",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "winston": "3.2.1"
    },
    "devDependencies": {
        "@types/express": "4.17.4",
        "@types/jest": "25.2.1",
        "@types/node": "13.11.0",
        "@types/react": "16.9.32",
        "@types/react-dom": "16.9.6",
        "babel": "6.23.0",
        "babel-core": "6.26.3",
        "babel-loader": "8.1.0",
        "babel-preset-es2015": "6.24.1",
        "babel-preset-react": "6.24.1",
        "concurrently": "5.1.0",
        "css-loader": "3.4.2",
        "jest": "25.2.7",
        "node-sass": "7.0.0",
        "nodemon": "2.0.2",
        "parcel-bundler": "1.12.4",
        "sass-loader": "8.0.2",
        "style-loader": "1.1.3",
        "ts-jest": "25.3.1",
        "ts-node": "8.8.2",
        "tslint": "6.1.1",
        "typescript": "3.8.3",
        "webpack": "4.42.1",
        "webpack-cli": "3.3.11"
    },
    "jest": {
        "preset": "ts-jest",
        "clearMocks": true,
        "coverageDirectory": "coverage",
        "testEnvironment": "node"
    }
}
